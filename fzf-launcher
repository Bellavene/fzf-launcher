#!/bin/zsh
open -a "$(bfs \
/Applications \
~/Applications \
/System/Applications \
/System/Library/CoreServices/ \
-maxdepth 2 -name "*.app" -s -nocolor \
| xargs -L1 -I{} basename "{}" .app \
| fzf --no-info --no-sort \
--bind 'enter:execute-silent(open -a {})+track+clear-query')" \
"$@" &> /dev/null
